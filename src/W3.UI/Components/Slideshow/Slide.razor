@namespace W3.UI.Components

@using W3.UI.Components.UIInterfaces
@implements IDisposable
@implements ISlide

<!-- Full-width images with number and caption text -->
<div class="slide fade">
    @ChildContent
</div>

@code {
    [CascadingParameter]
    private Slideshow ContainerSlideshow { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    protected override void OnInitialized()
    {
        ContainerSlideshow.AddSlide(this);
    }

    public void Dispose()
    {
        ContainerSlideshow.RemoveSlide(this);
    }

    private void Activate()
    {
        ContainerSlideshow.SetActiveSlide(this);
    }
}