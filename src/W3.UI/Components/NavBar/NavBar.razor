@namespace W3.UI.Components

<div class="navbar @NavMenuCssClass" id="myTopnav">
    <a class="icon" @onclick="@ToggleNavMenu">
        <i class="fa fa-bars"></i>
    </a>
    @ChildContent
</div>

@code {
    bool showNavMenu = false;

    string NavMenuCssClass => showNavMenu ? "responsive" : null;

    [Parameter]
    public bool IsSticky { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    void ToggleNavMenu()
    {
        showNavMenu = !showNavMenu;
    }
}