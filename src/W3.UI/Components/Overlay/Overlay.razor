@namespace W3.UI.Components

@if (IsOpen)
{
    <div class="overlay" @onclick="@OnClickOutside">
        <div class="content">
            @ChildContent
        </div>
    </div>
}

@code {
    [Parameter]
    public bool CanClickAway { get; set; } = false;

    [Parameter]
    public bool IsOpen { get; set; }

    [Parameter]
    public EventCallback<bool> IsOpenChanged { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    private void OnClickOutside(MouseEventArgs ev)
    {
        if (CanClickAway)
        {
            IsOpen = false;
        }
    }

    private void OnCloseClick(MouseEventArgs ev)
    {
        IsOpen = false;
    }
}