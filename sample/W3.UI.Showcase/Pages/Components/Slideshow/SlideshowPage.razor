@page "/slideshow"

<h1>Slideshow</h1>

<label for="IsAutomatic">Is automatic</label>
<input name="IsAutomatic" type="checkbox" bind="@isAutomatic" />

<Slideshow IsAutomatic="@isAutomatic">
    <Slide>
        <div class="numbertext">1 / 4</div>
        <img src="img/img_lights_wide.jpg" style="width:100%">
        <div class="text">Slide 1</div>
    </Slide>
    <Slide>
        <div class="numbertext">2 / 4</div>
        <img src="img/img_mountains_wide.jpg" style="width:100%">
        <div class="text">Slide 2</div>
    </Slide>
    <Slide>
        <div class="numbertext">3 / 4</div>
        <img src="img/img_nature_wide.jpg" style="width:100%">
        <div class="text">Slide 3</div>
    </Slide>
    <Slide>
        <div class="numbertext">4 / 4</div>
        <img src="img/img_snow_wide.jpg" style="width:100%">
        <div class="text">Slide 4</div>
    </Slide>
</Slideshow>

@functions {
    bool isAutomatic = true;
}